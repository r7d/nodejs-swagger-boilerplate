{
  "name": "node-api-swagger-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "build": "yarn build-ts && yarn lint",
    "build-ts": "tsc",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test-unit": "jest unit --forceExit --coverage --verbose --detectOpenHandles",
    "test-int": "jest int --forceExit --coverage --verbose --detectOpenHandles",
    "test-func": "jest func --forceExit --coverage --verbose --detectOpenHandles"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "cls-hooked": "^4.2.2",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "supertest": "^4.0.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cls-hooked": "^4.3.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/hapi__joi": "^15.0.3",
    "@types/jest": "^24.0.16",
    "@types/morgan": "^1.7.36",
    "@types/node": "^12.6.8",
    "@types/supertest": "^2.0.8",
    "@types/swagger-tools": "^0.10.6",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.1",
    "eslint": "^5.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
